	month = jun,
	year = {2018},
	note = {Conference Name: IEEE Internet of Things Journal},
	keywords = {Coils, Computer architecture, Control systems, Energy harvesting, Internet of Things, Internet of Things (IoT), Mobile communication, Software, information security, optimal scheduling, software defined networking},
