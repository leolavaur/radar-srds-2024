	note = {Conference Name: IEEE Systems Journal},
	keywords = {Ad hoc networks, Cryptography, FACES scheme, MANETs, Mobile computing, Peer to peer computing, Protocols, Routing, friend-based Ad Hoc Routing, security of communication systems, simulation analysis},
