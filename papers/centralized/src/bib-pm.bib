	journal = {Journal of Network and Systems Management},
	author = {Jorquera Valero, José María and Sánchez Sánchez, Pedro Miguel and Lekidis, Alexios and Fernandez Hidalgo, Javier and Gil Pérez, Manuel and Siddiqui, M. Shuaib and Huertas Celdrán, Alberto and Martínez Pérez, Gregorio},
