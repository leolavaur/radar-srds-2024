	note = {Conference Name: IEEE Transactions on Network and Service Management},
	keywords = {Bandwidth, Cloud computing, Linear programming, Middleboxes, Network function virtualization, Network topology, Noise measurement, Topology, network service embedding, orchestration, service chaining},
	pages = {91--105},
}

